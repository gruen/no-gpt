{
    "manifest_version": 2,
    "name": "GPT Message Filter",
    "version": "1.0",
    "description": "Filters out social messages containing phrases similar to 'I asked GPT to write...'",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_icon": "icon48.png",
      "default_title": "GPT Message Filter"
    }
  }
  